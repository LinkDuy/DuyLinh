<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".DangKyActivity">

    <EditText
        android:id="@+id/edtUser"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:background="@drawable/custom_btn"
        android:drawableRight="@drawable/baseline_account_circle_24"
        android:ems="10"
        android:hint="UserName"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/edtUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:background="@drawable/custom_btn"
        android:drawableRight="@drawable/baseline_account_circle_24"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/edtPassWd"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/custom_btn"
        android:ems="10"
        android:hint="PassWord"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUser"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="174dp"
        android:layout_height="65dp"
        android:background="@drawable/custom_btn"
        android:text="Sign Up"
        android:textSize="25dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnSigin"
        android:layout_width="177dp"
        android:layout_height="66dp"
        android:background="@drawable/custom_btn"
        android:text="Sign In"
        android:textSize="25dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827" />

    <EditText
        android:id="@+id/edtConFirm"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:background="@drawable/custom_btn"
        android:ems="10"
        android:textColor="#fff"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <ImageButton
        android:id="@+id/btnPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/customicon"
        app:layout_constraintBottom_toBottomOf="@+id/edtPassWd"
        app:layout_constraintEnd_toEndOf="@+id/edtPassWd"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="@+id/edtPassWd"
        app:layout_constraintTop_toTopOf="@+id/edtPassWd"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/baseline_block_24" />

    <ImageButton
        android:id="@+id/btnConfim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/customicon"
        app:layout_constraintBottom_toBottomOf="@+id/edtConFirm"
        app:layout_constraintEnd_toEndOf="@+id/edtConFirm"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="@+id/edtConFirm"
        app:layout_constraintTop_toTopOf="@+id/edtConFirm"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/baseline_block_24" />

</androidx.constraintlayout.widget.ConstraintLayout>